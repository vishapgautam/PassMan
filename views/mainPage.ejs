<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <script src="http://code.jquery.com/jquery-1.6.2.min.js"></script> 
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link
      rel="icon"
      href="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b5/Asterisk.svg/819px-Asterisk.svg.png"
    />
      <title> PassMan</title>
    <style>
        body{
         background-image: linear-gradient(to right, rgb(40, 79, 252) , rgb(8, 197, 245))
         }
        .password{
            height:50px;
            width:200px;
            background-color: brown;
        }
        h2{
          margin-top:2%;
          margin-bottom: 1%;
        }
        .card{
      background-color: rgb(90, 210, 247);
        }
    </style>
  </head>
  <body>
    <h2>Here are all your saved passwords--></h2>
    <% passwords.forEach(password => { %>
      <div class="card-columns">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Password field --> <%-password.key %></h5>
            <p class="card-text">Password Value --> <%-password.value %></p>
            <a class="btn btn-danger" href="/mainpage/passwords/delete/<%-password._id %>">Delete</a>
            <a class="btn btn-warning" href="/mainpage/passwords/update/<%-password._id %>">Update</a>
          </div>
        </div>
      </div>
     <% }) %>
      
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>